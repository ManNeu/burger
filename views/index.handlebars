<div class="container">
    <div class="row">
        <div class="col-sm-12"></div>
        <h1 class="burgTitle">Lets Eat the Burgers!</h1>
        <img src="assets/img/burger.jpg" alt="Burger">
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="burgHead"><i class="fas fa-burger"></i>Lists of burgers<i class="fas fa-burger"></i></h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>{{this.burger_name}} <button type="button" class="devour button"
                        data-id="{{this.id}}">Devour</button></li>
                {{/unless}}
                {{/each}}

            </ul>
        </div>
        <div class="col-sm-6">
            <h2 class="burgHead"><i class="fas fa-burgDevoured"></i> Burgers Devoured <i
                    class="fas fa-burgDevoured"></i></h2>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>{{this.burger_name}}
                    <button type="button" class="button delete-burger" data-id="{{this.id}}">Delete!</button></li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2 class=burgHead>Add your favourit burger to the list</h2>
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burgerText" name="burgers" placeholder="Enter your favorite burger here!">
                    <button type="submit" id="submit" class="button submitBtn">Submit</button>
                </div>

                <p class="burgHead">Submit the burger you want to eat</p>
            </form>
        </div>
    </div>
</div>